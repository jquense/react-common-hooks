{
  "name": "@restart/hooks",
  "version": "0.3.25",
  "main": "lib/cjs/index.js",
  "types": "lib/cjs/index.d.ts",
  "module": "lib/esm/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jquense/react-common-hooks.git"
  },
  "author": {
    "name": "Jason Quense",
    "email": "monastic.panic@gmail.com"
