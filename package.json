  "bugs": {
    "url": "https://github.com/react-restart/hooks/issues"
  },
  "homepage": "https://github.com/react-restart/hooks#readme",
  "scripts": {
    "bootstrap": "yarn && yarn --cwd www",
    "test": "jest --coverage",
    "tdd": "jest --watch",
    "build:pick": "cherry-pick --name=@restart/hooks --cwd=lib --input-dir=../src --cjs-dir=cjs --esm-dir=esm",
    "build": "rimraf lib && 4c build src && yarn build:pick",
    "deploy-docs": "yarn --cwd www build --prefix-paths && gh-pages -d www/public",
    "prepublishOnly": "yarn build"
  },
  "jest": {
    "preset": "@4c",
    "rootDir": "./test",
    "setupFilesAfterEnv": [
      "./setup.js"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "trailingComma": "all"
  },
  "publishConfig": {
    "access": "public",
    "directory": "lib"
  },
  "release": {
    "conventionalCommits": true
  },
  "peerDependencies": {
    "react": "^16.8.0"
  },
  "devDependencies": {
    "@4c/babel-preset": "^7.3.3",
    "@4c/cli": "^2.0.1",
    "@4c/jest-preset": "^1.5.0",
    "@4c/rollout": "^2.1.2",
    "@4c/tsconfig": "^0.3.1",
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.7",
    "@babel/preset-typescript": "^7.7.2",
    "@types/enzyme": "^3.10.5",
    "@types/jest": "^25.1.4",
    "@types/lodash": "^4.14.149",
    "@types/react": "^16.9.23",
    "babel-jest": "^25.1.0",
    "babel-plugin-transform-rename-import": "^2.3.0",
    "cherry-pick": "^0.5.0",
    "codecov": "^3.7.1",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "eslint": "^6.7.0",
    "gh-pages": "^2.2.0",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.8",
    "mq-polyfill": "^1.1.8",
    "prettier": "^1.19.1",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "rimraf": "^3.0.2",
    "typescript": "^3.8.3"
